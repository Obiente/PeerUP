---
import Card from "./ui/Card.astro";
import Heading from "./ui/Heading.astro";
import Button from "./ui/Button.astro";
import { CardBody } from "./ui";

interface Props {
  title: string;
  description: string;
  actionText: string;
  actionUrl: string;
}

const { title, description, actionText, actionUrl } = Astro.props;
---

<Card>
  <CardBody>
      <Heading size="3xl" class="mb-4">
        {title}
      </Heading>
      <p class="text-secondary mb-6 max-w-2xl">
        {description}
      </p>
      <Button variant="primary" size="lg" href={actionUrl}>
        {actionText}
        <svg
          class="w-4 h-4 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </Button>
  </CardBody>
</Card>
