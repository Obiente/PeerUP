---
export interface Props {
  value?: string | number;
  required?: boolean;
  disabled?: boolean;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'outlined' | 'filled';
  class?: string;
  [key: string]: any;
}

const { 
  value,
  required = false,
  disabled = false,
  size = 'md',
  variant = 'default',
  class: className = '',
  ...rest
} = Astro.props;

// Base select classes with modern styling
const baseClasses = "w-full rounded-xl border transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-bg-primary disabled:opacity-50 disabled:cursor-not-allowed appearance-none bg-no-repeat bg-right bg-center";

// Variant classes
const variantClasses = {
  default: "bg-bg-secondary border-border-subtle text-primary focus:border-border-focus focus:ring-border-focus hover:border-border-secondary",
  outlined: "bg-transparent border-2 border-border-primary text-primary focus:border-interactive-primary focus:ring-interactive-primary",
  filled: "bg-bg-elevated border-transparent text-primary focus:border-border-focus focus:ring-border-focus"
};

// Size classes
const sizeClasses = {
  sm: "px-3 py-2 text-sm pr-8",
  md: "px-4 py-3 text-base pr-10",
  lg: "px-5 py-4 text-lg pr-12"
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<div class="relative">
  <select 
    value={value}
    required={required}
    disabled={disabled}
    class={classes}
    {...rest}
  >
    <slot />
  </select>
  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
    <svg class="w-5 h-5 text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </div>
</div>
