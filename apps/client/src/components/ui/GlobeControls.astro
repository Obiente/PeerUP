---
import Button from './Button.astro';
import { Icon } from './index';

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class={`flex gap-2 ${className}`}>
  <Button 
    variant="secondary" 
    size="sm" 
    className="bg-surface-overlay hover:bg-surface-elevated text-primary transition-colors flex items-center gap-2"
    onclick="pauseGlobe()"
  >
    <Icon name="heroicons:pause" size="4" />
    Pause
  </Button>
  <Button 
    variant="secondary" 
    size="sm" 
    className="bg-surface-overlay hover:bg-surface-elevated text-primary transition-colors flex items-center gap-2"
    onclick="resetGlobe()"
  >
    <Icon name="heroicons:arrow-path" size="4" />
    Reset
  </Button>
</div>
