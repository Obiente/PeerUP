---
import Card from './Card.astro';
import Heading from './Heading.astro';
import Paragraph from './Paragraph.astro';

export interface Props {
  href: string;
  title: string;
  description: string;
  icon: string;
  iconBg?: 'primary' | 'secondary' | 'success' | 'warning' | 'error' | 'info';
  variant?: 'default' | 'elevated' | 'gradient';
  class?: string;
  [key: string]: any;
}

const { 
  href,
  title,
  description,
  icon,
  iconBg = 'primary',
  variant = 'default',
  class: className = '',
  ...rest
} = Astro.props;

const iconBgClasses = {
  primary: 'bg-interactive-primary',
  secondary: 'bg-bg-elevated',
  success: 'bg-status-success',
  warning: 'bg-status-warning',
  error: 'bg-status-error',
  info: 'bg-status-info'
};

const iconTextClasses = {
  primary: 'text-inverse',
  secondary: 'text-primary',
  success: 'text-inverse',
  warning: 'text-inverse',
  error: 'text-inverse',
  info: 'text-inverse'
};

const cardVariants = {
  default: 'default' as const,
  elevated: 'elevated' as const,
  gradient: 'elevated' as const
};
---

<a href={href} class={`block transition-all duration-200 group hover:scale-105 ${className}`} {...rest}>
  <Card variant={cardVariants[variant]} class="p-6">
    <div class="flex items-center gap-4">
      <div class={`w-14 h-14 ${iconBgClasses[iconBg]} rounded-xl flex items-center justify-center transition-transform duration-200 group-hover:scale-110 shadow-lg`}>
        <svg class={`w-7 h-7 ${iconTextClasses[iconBg]}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon}/>
        </svg>
      </div>
      <div class="flex-1">
        <Heading as="h3" size="lg" weight="semibold" class="group-hover:text-interactive-primary transition-colors">{title}</Heading>
        <Paragraph size="sm" color="secondary" class="mt-1">{description}</Paragraph>
      </div>
      <div class="text-tertiary group-hover:text-interactive-primary transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    </div>
  </Card>
</a>
