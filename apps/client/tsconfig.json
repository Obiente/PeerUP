{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$components": ["src/components"],
			"$components/*": ["src/components/*"],
			"$ui": ["src/components/ui"],
			"$layouts/*": ["src/layouts/*"],
			"$mock/*": ["src/mock/*"],
			"$store": ["src/store.ts"]
		},
	}
}
